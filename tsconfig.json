{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
